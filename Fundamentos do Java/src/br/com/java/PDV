package br.com.java;

import java.util.Scanner;

public class PDV {

	public static void main(String[] args) {
		double preço, desconto, troco, pagamento ;
		Scanner teclado = new Scanner(System.in);
		System.out.println("Calculadora de lucro: ");
		System.out.println("");
		//entrada
		System.out.println("Preço de custo: ");
		preço = teclado.nextDouble();
		System.out.println("desconto: ");
		desconto = teclado.nextDouble();
		//processamento
		preço = preço - ((desconto - preço) / 100);
		//troco
		 System.out.println("desconto : "  + preço);
		//saida
		 System.out.println("troco : "  + desconto);



	}

}
